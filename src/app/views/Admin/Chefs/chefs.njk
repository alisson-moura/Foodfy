{% extends "Admin/layout.njk" %}

{% block content %}
<div class="main">
  <div class="header-title">
    <h1>Gerenciar Chefs</h1>
    {% if userId %}
    <a href="chefs/create" class="button">Novo Chef</a>
    {% endif %}
  </div>
  <div class="cards-chefs">
    {% for chef in chefs %}
    <div class="card-chef" id="{{chef.id}}">
      <div>
        <img src="{{chef.file.src}}" alt="{{chef.name}}">
      </div>
      <div>
        <h2>{{chef.name}}</h2>
        <a href="chefs/{{chef.id}}">Visualizar</a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock content %}