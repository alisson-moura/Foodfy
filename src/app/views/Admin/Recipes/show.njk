{% extends "Admin/layout.njk" %}

{% block content %}
  <div class="main">
    <div class="form-header">
      <h2>Receita:
        {{recipe.title}}</h2>
      <a href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
    </div>

    
    <div class="gallery">
      <img src="{{images[0].src}}" alt="" srcset="" class="image-banner">
      <div class="images-gallery">
        {% for image in images %}
        <img src="{{image.src}}" alt="" onclick="SelectImageBanner.handleSelectImage(event)" srcset="" class="image-miniature">
        {% endfor %}
      </div>
    </div>
    
    <div class="title">
      <h1>{{recipe.title}}</h1>
      <p>por
        {{recipe.chef_name}}</p>
    </div>
    <div class="details">
      <div class="detail-content">
        <h2>Ingredientes
        </h2>
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content">
        <h2>Modo de preparo
        </h2>
        <ul>
          {% for step in recipe.preparation %}
            <li>{{step}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content">
        <h2>Informações adicionais
        </h2>
        <p>{{recipe.information}}</p>
      </div>

    </div>

  </div>
{% endblock content %}