{% extends "Admin/layout.njk" %}

{% block content %}
  <div class="main">
    <form action="/admin/recipes" method="post" enctype="multipart/form-data">
      <div class="form-header">
        <h1>Criando Receita</h1>
        <button type="submit">Salvar receita</button>
      </div>
      {%include 'Admin/Recipes/fields.njk' %}
    </form>
    <script src="/scripts/admin/fieldsRecipes.js"></script>
    {% if error %}
      <div data-error="{{error}}" class="errorAlert"></div>
      <script src="/scripts/admin/error.js"></script>
    {% endif %}
  </div>
{% endblock content %}