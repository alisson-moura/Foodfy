{% extends "Site/layout.njk" %}

{% block head %}
<title>Foodfy - {{recipe.title}}</title>
{% endblock head %}

{% block content %}
<main>

  <div class="gallery">
    <img src="{{images[0].src}}" alt="" srcset="" class="image-banner">
    <div class="images-gallery">
      {% for image in images %}
      <img src="{{image.src}}" alt="" onclick="SelectImageBanner.handleSelectImage(event)" srcset=""
        class="image-miniature">
      {% endfor %}
    </div>
  </div>

  <div class="title">
    <h1>{{recipe.title}}</h1>
    <p>por
      {{recipe.chef_name}}</p>
  </div>
  <div class="details">
    <div class="detail-content active">
      <h2>Ingredientes
        <span class="spanBtn">Mostrar</span></h2>
      <ul>
        {% for ingredient in recipe.ingredients %}
        <li>{{ingredient}}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="detail-content active">
      <h2>Modo de preparo
        <span class="spanBtn">Mostrar</span></h2>
      <ul>
        {% for step in recipe.preparation %}
        <li>{{step}}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="detail-content active">
      <h2>Informações adicionais
        <span class="spanBtn">Mostrar</span></h2>
      <p>{{recipe.information}}</p>
    </div>

  </div>
</main>
{% endblock content %}