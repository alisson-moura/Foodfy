{% extends "Admin/layout.njk" %}

{% block content %}
  <div class="main">
    <div class="form-header">
      <h2>Receita:
        {{recipe.title}}</h2>
      <a href="/admin/recipes/:id/edit">Editar receita</a>
    </div>
    <img src="{{recipe.image}}" alt="" srcset="" class="image-banner">
    <div class="title">
      <h1>{{recipe.title}}</h1>
      <p>por
        {{recipe.author}}</p>
    </div>
    <div class="details">
      <div class="detail-content">
        <h2>Ingredientes
        </h2>
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content">
        <h2>Modo de preparo
        </h2>
        <ul>
          {% for step in recipe.preparation %}
            <li>{{step}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content">
        <h2>Informações adicionais
        </h2>
        <p>{{recipe.information}}</p>
      </div>

    </div>

  </div>
{% endblock content %}