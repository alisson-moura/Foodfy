{% extends "layout.njk" %}

{% block head %}
  <title>Foodfy - {{recipe.title}}</title>
{% endblock head %}

{% block content %}
  <main>
    <img src="{{recipe.image}}" alt="" srcset="" class="image-baner">
    <div class="title">
      <h1>{{recipe.title}}</h1>
      <p>por
        {{recipe.author}}</p>
    </div>
    <div class="details">
      <div class="detail-content active">
        <h2>Ingredientes
          <span class="spanBtn">Mostrar</span></h2>
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content active">
        <h2>Modo de preparo
          <span class="spanBtn">ESCONDER</span></h2>
        <ul>
          {% for step in recipe.preparation %}
            <li>{{step}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="detail-content active">
        <h2>Informações adicionais
          <span class="spanBtn">ESCONDER</span></h2>
        <p>{{recipe.information}}</p>
      </div>

    </div>
  </main>
{% endblock content %}